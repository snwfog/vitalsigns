<?xml version="1.0" encoding="utf-8"?>
<controller:LoginController xmlns:fx="http://ns.adobe.com/mxml/2009"
							xmlns:controller="application.controller.*"
							xmlns:s="library://ns.adobe.com/flex/spark"
							xmlns:component="application.component.*"
							add="LoginController_addHandler(event)"
							title="VitalSigns Login">	
	<fx:Declarations>
		<s:SolidColor id="formRowFill" color="0xFFFFFF" />
	</fx:Declarations>
	
	<s:Scroller width="100%" height="100%">
		<s:VGroup width="100%" height="100%" paddingLeft="3" paddingRight="3" paddingTop="3" gap="20">
			<s:Spacer height="5%" />
			<s:VGroup width="100%" styleName="formRow" gap="0">
				<s:Label text="Username:" />
				<s:Group width="100%">
					<s:Rect width="100%" height="100%" radiusX="8" fill="{formRowFill}" />
					<s:HGroup width="100%" height="100%" paddingLeft="5" paddingTop="5" paddingRight="5" paddingBottom="5">
						<s:TextInput width="100%" name="userName" id="userName" focusIn="userName_focusInHandler(event)" focusOut="userNameChange(event)" />
					</s:HGroup>
				</s:Group>
			</s:VGroup>
			<s:VGroup width="100%" styleName="formRow" gap="0">
				<s:Label text="Site:" />
				<s:Group width="100%">
					<s:Rect width="100%" height="100%" radiusX="8" fill="{formRowFill}" />
					<s:HGroup width="100%" height="100%" paddingLeft="5" paddingTop="5" paddingRight="5" paddingBottom="5">
						<component:VSButtonBar id="btnSite" requireSelection="true" dataProvider="{arrSites}" width="100%"></component:VSButtonBar>
					</s:HGroup>
				</s:Group>
			</s:VGroup>
			<s:VGroup width="100%" styleName="formRow" gap="0">
				<s:Label text="Unit:" />
				<component:DropDownEntry id="ddlUnit" click="ddlUnit_clickHandler(event)" value="{defaultUnit}" />
			</s:VGroup>
			<s:VGroup width="100%">
				<s:HGroup width="100%" height="100%" horizontalAlign="center">
					<s:Button id="btnLogin" label="Log in" width="150" click="btnLogin_clickHandler(event)" />
				</s:HGroup>
			</s:VGroup>
		</s:VGroup>
	</s:Scroller>
</controller:LoginController>
