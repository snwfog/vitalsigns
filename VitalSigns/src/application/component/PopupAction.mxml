<?xml version="1.0" encoding="utf-8"?>
<s:SkinnablePopUpContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" add="popUpAction_addHandler(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout gap="20" horizontalAlign="center" />
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import application.view.DataEntry;
			import application.view.LabsView;
			import application.view.notes.NotesView;
			import application.view.PatientProfileView;
			import application.view.PatientSummaryView;
			
			import mx.events.FlexEvent;
			
			import spark.components.View;
			
			private var _patientId:int;
			private var _width:int;
			private var _height:int;
			
			[Bindable]
			public function get patientId():int{
				return _patientId;
			}
			
			public function set patientId( id:int ):void{
				_patientId = id;
			}
			
			public function get availWidth():int{
				return width;
			}
			
			public function set availWidth( w:int ):void{
				width = w;
			}
			
			public function get availHeight():int{
				return height;
			}
			
			public function set availHeight( h:int ):void{
				height = h;
			}
			
			protected function btnCancel_clickHandler(event:MouseEvent):void {
				super.close();				
			}
			
			protected function btnSummary_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				removeListener();
				super.close( true, PatientSummaryView );
			}
			
			protected function btnAdd_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				removeListener();
				super.close( true, DataEntry );
			}
			
			protected function btnProfile_clickHandler(event:MouseEvent):void
			{
				removeListener();
				super.close( true, PatientProfileView );
			}
			
			protected function btnLabs_clickHandler(event:MouseEvent):void
			{
				removeListener();
				super.close( true, LabsView );
			}
			
			protected function btnNotes_clickHandler(event:MouseEvent):void {
				removeListener();
				super.close(true, NotesView );
			}
			
			protected function popUpAction_addHandler(event:FlexEvent):void
			{
				VitalSigns.registerOrientationChangeListener( relocate );
				relocate( parentApplication.stage.width, parentApplication.stage.height );
				this.addEventListener(KeyboardEvent.KEY_DOWN, onKeyDown);
				this.setFocus();
			}
			
			protected function removeListener():void{
				VitalSigns.removeOrientationChangeListener( relocate );
			}
			
			public function relocate( x:int, y:int ):void{
				this.width = x * 0.8;
				this.height = y * 0.8;
				this.move( ( x - this.width ) / 2, ( y - this.height ) / 2 );
			}
			
			protected function onKeyDown(event:KeyboardEvent):void
			{
				if(event.keyCode == Keyboard.BACK)
				{	
					event.preventDefault();
					close();				
				}
			}
			
		]]>
	</fx:Script>
	
	
	<s:Group width="100%" height="100%">
		<s:Rect radiusX="10" radiusY="10" width="100%" height="100%">
			<s:fill>
				<s:SolidColor color="0xDEDEDE"/>
			</s:fill>
		</s:Rect>
		<s:VGroup width="100%" height="100%" paddingTop="10" paddingBottom="10" paddingLeft="10" paddingRight="10" horizontalAlign="center" gap="10">
			<s:Label text="Select an action:" width="100%" textAlign="center"/>
			<s:Button id="btnAdd" label="Add New Data" click="btnAdd_clickHandler(event)" width="100%" />
			<s:Button id="btnSummary" label="View Summary" click="btnSummary_clickHandler(event)" width="100%" />
			<s:Button id="btnProfile" label="View Profile" click="btnProfile_clickHandler(event)" width="100%" />
			<s:Button id="btnLabs" label="View Labs" click="btnLabs_clickHandler(event)" width="100%" />
			<s:Button id="btnNotes" label="View Notes" click="btnNotes_clickHandler(event)" width="100%" />
			<s:HGroup width="100%" horizontalAlign="center" paddingTop="10">
				<s:Button label="Cancel" width="50%" click="btnCancel_clickHandler(event)"/>
			</s:HGroup>
		</s:VGroup>
	</s:Group>
	
</s:SkinnablePopUpContainer>
